{
    "manifest_version": 3,
    "name": "Onlyfans-Downloader",
    "version": "1.0.1",
    "description": "Add extra powersâš¡ to onlyfans-downloader.com!.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.onlyfans-downloader.com/*",
                "http://localhost:3000/*"
            ],
            "js": [
                "extension.js"
            ]
        },
        {
            "matches": [
                "https://www.onlyfans-downloader.com/*",
                "http://localhost:3000/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "https://www.onlyfans-downloader.com/*",
            "http://localhost:3000/*"
        ]
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
    }
}